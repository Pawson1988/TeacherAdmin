<% layout ('boilerplate.ejs') -%>
<div class="container">
    <div class="container outer-ind-info-container">
        <div class="inner-ind-info-container">

            <h4><strong><%-"Name".toUpperCase()%></strong></h4><h6><%- classInfo.student %></h6>
            <h4><strong><%-"Day".toUpperCase()%></strong></h4><h6><%- classInfo.day %></h6>
            <h4><strong><%-"Start Time".toUpperCase()%></strong></h4><h6><%- classInfo.startTime %></h6>
            <h4><strong><%-"End Time".toUpperCase()%></strong></h4><h6><%- classInfo.endTime %></h6>
            <h4><strong><%-"Price".toUpperCase()%></strong></h4><h6><%- classInfo.price %></h6>
            <h4><strong><%-"Duration".toUpperCase()%></strong></h4><h6><%- classInfo.duration %></h6>
            <h4><strong><%-"Email Address".toUpperCase()%></strong></h4><h6 class="mb-3"><%- classInfo.email %></h6>
            
            
                <button class="email-pop-up-btn btn btn-primary">Send Email</button>
            
        </div>

        <div class="class-notes">
            <h3 class="note-form-header">Add a note to this class here</h3>
                <div class="notes-form-container">
                    <form action="/class/<%- classInfo._id %>/note" method="POST">
                        <div class="mb-3 form-group">
                            <p>Note Title: </p>
                            <input class="form-control" type="text" name="noteTitle" id="noteTitle" required>
                        </div>
                        <div class="mb-3 form-group">
                            <p>Note Body: </p>
                            <textarea class="form-control" name="noteBody" id="noteBody" cols="20" rows="10" required></textarea>
                        </div>
                        <button class="btn btn-success">Add Note</button>
                    </form>
                </div>
        </div>
    </div>



    <div class="note-show-container mt-3">
        <% for(let note of classInfo.note){ %>
        <div>
            <div class="mt-3 note-title">
                <p><strong><%- note.noteTitle.toUpperCase() %></strong></p>
            </div>
            <div class="note-body">
                <p><%- note.noteBody %></p>
            </div>
                <form class="delete-note-btn" action="/class/<%- note._id %>/<%- classInfo._id %>/delete?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            
        </div>
        <% } %>
    </div>
    
</div>

<div class="email-pop-up">
    <form action="/class/<%- classInfo._id %>/email" method="post">
        <div class="mb-3 form-group">
            <label for="email-title">Title</label>
            <input class="form-control" type="text" name="emailTitle" id="email-title" placeholder="Email Title" required>
        </div>
        <div class="mb-3 form-group">
            <label for="email-body">Message</label>
            <textarea class="form-control" name="emailBody" id="email-body" cols="30" rows="10" placeholder="Type your message here" required></textarea>
        </div>
        <button class="btn btn-success">Submit</button>
    </form>
        <button class="mt-3 click-off-email-btn btn btn-success">Go Back</button>
    
</div>
 