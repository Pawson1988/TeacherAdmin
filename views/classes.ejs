            <div class="add-a-class-div">

                <h1>ADD A CLASS</h1>

                <form action="/classes/add" method="post">
                    <div class="form-group">
                        <label for="student">Student's Name</label>
                        <input class="form-control" type="text" name="student" id="student" placeholder="Student">
                    </div>
                    <div class="form-group">
                        <label for="days">Choose a day:</label>
                        <select class="form-control" id="days" name="days">
                        <option value="Monday">Monday</option>
                        <option value="Tuesday">Tuesday</option>
                        <option value="Wednesday">Wednesday</option>
                        <option value="Thursday">Thursday</option>
                        <option value="Friday">Friday</option>
                        </select> 
                    </div>
